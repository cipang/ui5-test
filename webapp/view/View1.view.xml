<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sap.btp.sapui5.controller.View1" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
                    <content>
                        <IconTabBar selectedKey="__filter1" id="bar0">
                            <items>
                                <IconTabFilter text="Arrival" id="filter0" icon="sap-icon://home">
                                    <content>
                                        <List noDataText="No data" id="list0" items="{/Arrival}">
                                            <items>
                                                <StandardListItem title="{flightId}" id="item0" description="{time} {status} Passenger: {passengers}" icon="{logo}" press="handleListPress" type="Active"/></items>
                                        </List>
                                    </content>
                                </IconTabFilter>
                                <IconTabFilter text="Departure" icon="sap-icon://flight" iconColor="Critical" id="filter1">
                                    <content>
                                        <List noDataText="No data" id="list1" items="{/Departure}">
                                            <items>
                                                <StandardListItem title="{flightId}" id="item1" description="{time} {status} Passenger: {passengers}" icon="{logo}" press="handleListPress" type="Active"/></items>
                                        </List>
                                    </content>
                                </IconTabFilter></items>
                        </IconTabBar>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>